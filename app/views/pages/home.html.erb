<div class="banner-home">
  <div class="banner-content text-center">
    <h1>Bici Bike Berlin</h1>
    <h3><%= t('.discover_berlin') %></h3>
  </div>
</div>
<div class="wrapper-white wrapper-large-padding">
  <div class="container">
    <h3 class="wrapper-title text-center title-gray"><%= t('.why_visit') %></h3>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-2 text-center">
        <div class="description-home">
          <%= image_tag("heart.svg", class: "icon-medium") %>
          <h4><%= t('.authentic_experience') %></h4>
          <p><%= t('.authentic_experience_description') %></p>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4 text-center">
        <div class="description-home">
          <%= image_tag("compass.svg", class: "icon-medium") %>
          <h4><%= t('.away_from_the_masses') %></h4>
          <p><%= t('.away_from_the_masses_description') %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="wrapper-blue wrapper-large-padding" id="tours">
  <div class="container">
      <h3 class="wrapper-title text-center"><%= t('.all_tours') %></h3>
    <div class="row">
      <% @tours.each do |tour| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card-tour" data-aos="fade-up" data-aos-offset="100" style="background-image: url('<%= cl_image_path tour.photo %>');background-position: center; background-size: cover;">
            <div class="card-description">
              <div class="card-left">
                <h4 class="card-title"><%= tour.name %></h4>
                <p class="card-location"><i class="fas fa-map-marker-alt"></i> <%= tour.location %></p>
              </div>
              <%= link_to tour_path(tour) do  %>
                <button class="button button-small"><i class="fas fa-arrow-right"></i></button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


