<%= simple_form_for([ tour, booking ], remote: true) do |f|%>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <% if I18n.locale == :de %>
  <%= f.input :booking_date, as: :string, input_html: {class: "datepicker-de"} %>
  <% else %>
    <%= f.input :booking_date, as: :string, input_html: {class: "datepicker"} %>
  <% end %>
  <%= f.input :comment %>
  <%= f.submit %>
<% end %>
