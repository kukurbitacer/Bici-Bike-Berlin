<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.jpg", height: 50 %>
   <span class="logo-text">Bici Bike Berlin</span>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

      <!-- Links when logged in -->
      <%= link_to t('.tours'), root_path(anchor: 'tours'), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t('.contact'), "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <span class="navbar-wagon-item">
        <%= link_to "DE", url_for(locale: 'de'), class: "navbar-wagon-link" %> |
        <%= link_to "EN", url_for(locale: 'en'), class: "navbar-wagon-link"  %>
      </span>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle hamburger-hover" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to t('.tours'), root_path(anchor: 'tours')  %>
        </li>
        <li><a href="#">Contacts</a></li>
        <li class="navbar-language">
          <span>
        <%= link_to "DE", url_for(locale: 'de') %> |
        <%= link_to "EN", url_for(locale: 'en') %>
      </span>
        </li>
      </ul>
    </div>
  </div>
</div>

