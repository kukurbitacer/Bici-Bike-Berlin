<table align= "center" cellpadding="0" cellspacing="0" width="600" style="border-collapse: collapse; font-family: Arial, sans-serif; border: solid 1px #d4d8db;">
  <tr>
    <td bgcolor="#549FEA" style="padding: 0px 10px 10px 10px; color: #FFFFFF;">
      <table cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding-left: 10px">
            <h3><%= t('.mail_title', name: @booking.first_name.capitalize) %></h3>
          </td>
        </tr>
        <tr>
          <td style="padding-left: 10px;">
            <p style="margin: 0 0 5px 0"><%= t('.thank_you') %></p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td bgcolor="#FFFFFF" style="padding: 10px 10px 20px 10px;">
      <table cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding: 10px;">
            <b><%= t('.details_of_booking') %></b>
          </td>
        </tr>
        <tr>
          <td style="padding: 5px 0px 20px 15px; color: #403F4C">
            <p style="margin: 0 0 5px 0"><span><%= t('.date') %> :</span> <%= l(@booking.booking_date, format: :long) %></p>
            <p style="margin: 0 0 5px 0"><span><%= t('.tour_name') %> :</span> <%= @booking.tour.name %></p>
            <p style="margin: 0 0 5px 0"><span><%= t('.number_of_people') %> :</span> <%= @booking.person_attending.to_s %></p>
            <% if @booking.bike %>
            <p style="margin: 0 0 5px 0"><span><%= t('.number_of_bikes') %> :</span> <%= @booking.bike_number.to_s %></p>
            <% else %>
            <p style="margin: 0 0 5px 0"><%= t('.no_bikes') %></p>
            <% end %>
          </td>
        </tr>
        <tr>
          <td style="padding: 10px; border-top: solid 1px #d4d8db">
            <b><%= t('.contact_guide', guide: @booking.tour.guide.name) %></b>
          </td>
        </tr>
        <tr>
          <td>
            <table cellpadding="0" cellspacing="0" width="100%">
              <tr>
                <td align="center" width="25%">
                  <%= cl_image_tag(@booking.tour.guide.photo, width: 75, style: "border-radius: 50%;") %>
                </td>
                <td width="75%" style="padding-left: 15px; color: #403F4C">
                  <p><%= t('.change_booking') %></p>
                  <p style="margin: 0 0 5px 0"><span><%= t('.email') %> :</span> <%= @booking.tour.guide.email %></p>
                  <p style="margin: 0 0 5px 0"><span><%= t('.phone') %> :</span><%= @booking.tour.guide.phone %></p>
                </td>
              </tr>
            </td>
          </table>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td bgcolor="#F5E663" style="padding: 20px 10px 20px 10px;">
      <span style="color: #403F4C; font-size: 12px;"><%= t('.visit_us') %> <font color="color: #403F4C"> <%= link_to "Bici-Bike-Berlin", root_url  %></span>

    </td>
  </tr>
</table>

